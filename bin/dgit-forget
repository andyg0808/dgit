#!/bin/bash
SOURCE="$(readlink -f $(dirname $BASH_SOURCE))"
source "$SOURCE/dgit-locations"
list=$(conffolder)

cd "$list"

repo=$(zenity --list --text="Choose a issue to forget" --column "Issue Name" *)
#Check that an item was chosen
if [ ! $? -o -z "$repo" ]
then
	exit 0
fi
echo "Issue $repo chosen" &>> "$dgitlog"

ln -l "$repo" &>> "$dgitlog"

rm "$repo" && zenity --info --title="Success" --text="Issue forgotten." && echo "Issue $repo forgotten. Files at location above." &>> "$dgitlog"

