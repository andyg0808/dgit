#!/bin/bash
list="$(cat /usr/local/etc/newstools)"
cd "$list"

repo=$(zenity --list --text="Choose a issue to forget" --column "Issue Name" *)
#Check that an item was chosen
if [ ! $? -o -z "$repo" ]
then
	exit 0
fi
echo "Issue $repo chosen"

rm "$repo" && zenity --info --title="Success" --text="Issue forgotten."
